<div style="margin-top: 30px">

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="<% if @active_tab.nil? %>active<% end %> order_tab">
    	<a href="#new_orders_table" aria-controls="home" role="tab" data-toggle="tab" align="center" style="color: #EF9223">
    		<h4>New Orders ( <%= @new_orders.count %> )</h4>
    	</a>
    </li>
    <li role="presentation" class="<% if @active_tab == "processing" %>active<% end %> order_tab">
    	<a href="#open_orders_table" aria-controls="profile" role="tab" data-toggle="tab" align="center" style="color: grey">
    		<h4>Processed Orders ( <%= @processed_orders.count %> )</h4>
    	</a>
    </li>
    
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane <% if @active_tab.nil? %>active<% end %>" id="new_orders_table">
    	<%= render "new_orders" %>
    </div>
    <div role="tabpanel" class="tab-pane <% if @active_tab == "processing" %>active<% end %>" id="open_orders_table">
    	<%= render "processed_orders" %>
    </div>
  </div>

</div>
