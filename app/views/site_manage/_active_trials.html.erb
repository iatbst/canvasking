

<table class="table">
	<thead>

	
			<th style="width: 200px"> 生效时间 </th>
			<th style="width: 200px"> 过期时间 </th>
			<th style="width: 200px"> 用户 </th>
			<th>
				VPN IP
			</th>

			<th>
			
			</th>
	
	</thead>
	<tbody>
		<% @active_trials.each do | trial | %>
			<tr>
		
				<td>
					<%= trial.updated_at.to_s.gsub!('UTC', '') %>
				</td>
				<td>
					<%= (trial.updated_at + 2.days).to_s.gsub!('UTC', '') %>
				</td>
				<td>
					<%= trial.user.email %>
				</td>
				<td>
					<%= trial.vpn_server %>
				</td>				
				
				<td align="center">
					<%= link_to 'Process', active_trial_detail_path(trial), class: "process_button btn btn-secondary"  %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
