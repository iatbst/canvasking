

<table class="table">
	<thead>

			<th style="width: 100px">Code</th>
			<th style="width: 200px">User</th>
			<th style="width: 300px">Description</th>
			<th style="width: 100px">Discount</th>
			<th style="width: 100px">Used</th>
			<th style="width: 200px">Expire Date</th>
			<th style="width: 100px">At Least</th>
			<th style="width: 100px"></th>
	</thead>
	<tbody>
			<% @private_coupons.each do |coupon| %>
				<tr style="<% if coupon.used %>background-color:lightyellow<% end %>">
					<td>
						<%= coupon.code %>
					</td>
					<td>
						<%= coupon.user.email %>
					</td>
					<td>
						<%= coupon.description %>
					</td>
					<td>
						<% if coupon.discount_by_val %>
							$<%= coupon.discount_val %>
						<% else %>
							<%= coupon.discount_ptg %>%
						<% end %>
					</td>
					<td>
						<%= coupon.used %>
					</td>
					<td>
						<%= coupon.exp_date.to_s.gsub!('UTC', '') %>
					</td>
					<td>
						<% if coupon.condition_at_least_amount %>
							$<%= coupon.condition_at_least_amount %>
						<% end %>
					</td>
					<td>
						<%= link_to 'Edit', site_manage_edit_coupon_path(coupon), class: 'btn btn-secondary btn-sm' %>
					</td>
				</tr>
			<% end %>
	</tbody>

</table>
