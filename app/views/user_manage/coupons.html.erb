<%= render 'layouts/navbar' %>
<style>
.orange_button {
  background-color: #ef9223;
  border-color: #ef9223;
  color: white;
  border-radius: 0px;
  font-weight: bold;
}

#use_coupon_button {


	  
  width: 400px;
  height: 50px;
  border-color: #ef9223;
  color: #ef9223;
  border-width: 2px;
  border-style: solid;
  background: transparent;
  border-radius: 25px;
  margin-top: 50px;
  font-weight: bolder;
}

#use_coupon_button:hover {
  background-color: #ef9223;
  color: white;
}


</style>

<div class="container" style="margin-top: 50px; min-height: 100%; margin-bottom: 50px;">
	<div class="row" >
		<div class="col-md-2" style="" align="left">

			<%= render 'left_bar' %>

		</div>

		<div class="col-md-9 col-md-offset-1" style="">
			<div class="row" style="margin-left: 1px">
				<h3> All My Coupons</h3>
			</div>

			<div style="margin-top: 20px; margin-bottom: 50px">
				<table class="table table-striped" style="font-size: 18px">
					<thead>
						<tr>
							<th>
								Code
							</th>
							<th>
								Description
							</th>
							<th>
								Expiration Date
							</th>
							<th>
							
							</th>
						</tr>
					</thead>
					
					<tbody>
						<% @coupons.each do | coupon | %>
							<tr>
								<td style="padding: 15px">
							
									<%= coupon.code %>
									
								</td>
								<td style="padding: 15px">
								
									<%= coupon.description %>
							
								</td>
								<td style="padding: 15px">
									<%= coupon.exp_date.to_s.split(' ')[0] %>
								</td>
								<td style="padding: 15px">
									<% if coupon.used %>
										<b style="color:red">USED</h3>
									<% elsif Time.now > coupon.exp_date %>
										<b style="color:red">EXPIRED</h3>
									<% else %>
										<b style="color:green">AVAILABLE</h3>
									<% end %>
								</td>

								


							</tr>
						
						<% end %>
					</tbody>
				</table>
				
				<div class="row" align="center">
					<%= button_to 'USE COUPON', new_item_path, class:"btn btn-primary btn-lg", method:"get", id:"use_coupon_button" %>
				</div>
			</div>
		</div>
	</div>
</div>

<%= render "layouts/footer" %>
