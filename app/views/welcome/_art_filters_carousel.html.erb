
<style>

.carousel-control.carousel-art-filters {
    z-index: 10;
    top: 2%;
    width: 30px; // no more gray thing
    font-family: 'Helvetica Neue', Arial, sans-serif;
}
.carousel-control.carousel-art-filters.left {
	background: none; 
	margin-top: -30px;
	left: -63px;
	right: -120px;	
}

.carousel-control.carousel-art-filters.right { 
	background: none; 
	margin-top: -30px;
	left: 600px;
	right: -120px;
}


</style>
		<!-- Image Slider -->
		<div class="row" style="height: 450px; margin-top: 0px">
			<div class="col-md-10 col-md-offset-1">
				<div id="carousel-art-filter-generic" class="carousel slide" data-interval="false" >
					<!-- Indicators -->
					<ol class="carousel-indicators">
						<li data-target="#carousel-art-filter-generic" data-slide-to="0" class="active" ></li>
						<li data-target="#carousel-art-filter-generic" data-slide-to="1" ></li>
						<li data-target="#carousel-art-filter-generic" data-slide-to="2" ></li>
					</ol>
					
					<!-- Wrapper for slides -->
					<div class="carousel-inner" role="listbox">
						<div class="item active">
							<%= render partial: 'art_filters_1',  locals:{f: f} %>
						</div>

						<div class="item">
							<%= render partial: 'art_filters_2',  locals:{f: f} %>
						</div>

						<div class="item">
							<%= render partial: 'art_filters_3',  locals:{f: f} %>
						</div>
		

					</div>
					
					  <!-- Controls -->
					  <a class="left carousel-control carousel-art-filters" href="#carousel-art-filter-generic" role="button" data-slide="prev">
					    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true" style="font-size: 40px; color: lightgrey"></span>
					    <span class="sr-only">Previous</span>
					  </a>
					  <a class="right carousel-control carousel-art-filters" href="#carousel-art-filter-generic" role="button" data-slide="next">
					    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true" style="font-size: 40px; color: lightgrey"></span>
					    <span class="sr-only">Next</span>
					  </a>


				</div>
			</div>

		</div>