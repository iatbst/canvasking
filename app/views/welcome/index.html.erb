<!-- Twentytwenty -->
<script>
	$(window).load(function() {
		$("#photo_art_transform").twentytwenty({
			default_offset_pct : 0
		});

		$('.twentytwenty-handle').remove();
		$('.twentytwenty-overlay').remove();
	});

	var transformed = false;
	$(window).scroll(function() {
		var hT = $('#scroll-to-once').offset().top, hH = $('#scroll-to-once').outerHeight(), wH = $(window).height(), wS = $(this).scrollTop();
		if (wS > (hT + hH - wH) && transformed == false) {
			twentytwenty_auto_move();
			transformed = true;
		}
	});
	
	function twentytwenty_auto_move() {
		var offset = 0;
		var id = setInterval(frame, 10);
		function frame() {
			if (offset == 2000) {
				clearInterval(id);
			} else {
				offset++;
				$('.twentytwenty-before').css('clip', 'rect(0px ' + offset + 'px 882px 0px');
			}
		}

	}
</script>
