<style>
	.complete {
		width: 160px;
		height: 3px;
		position: relative;
		background: #EF9223;
		margin-left: 20px;
		margin-top: 0px;
	}
	.complete:after {
		content: '';
		width: 20px;
		height: 20px;
		border-radius: 50%;
		position: absolute;
		background: #EF9223;
		bottom: -7.5px;
		left: -8px;
		z-index: 100;
		margin-left: -10px;
	}
	.not_complete {
		width: 160px;
		height: 3px;
		position: relative;
		background: #EF9223;
		margin-left: 19px;
		margin-top: 0px;
	}
	.not_complete:after {
		content: '';
		width: 20px;
		height: 20px;
		border-radius: 50%;
		position: absolute;
		border-width: 2px;
		border-style: solid;
		border-color: #EF9223;
		background: transparent;
		bottom: -7.5px;
		left: -8px;
		z-index: 100;
		margin-left: -10px;
	}

	.last_dot {
		width: 160px;
		height: 3px;
		position: relative;
		background: white;
		margin-left: 19px;
	}

	.progress_text {
		margin-top: 50px;
	}
	
	.order_button {
		width: 300px;
	}
	
	.order_button:hover {
		background: #EF9223;
		border-color: #EF9223;
	}
	
	.cart_position_fixed {
    	position: fixed;
    	top: 120px;  
	}
</style>
<!-- marketing banner -->
<%= render 'layouts/marketing_banner' %>

<%= render "layouts/navbar" %>



<div class="container" style="margin-top:50px; margin-bottom: 50px; min-height: 100%;" >

	

		<% if @cart.items.count == 0 %>
		<div align="center" style="margin-top: 20px">
			<%= image_tag '/cart/empty_cart.png' %>
			<h3 style="font-weight: 200">额...您还没有选购任何套餐</h3>
			<br />
			<%= button_to '选购套餐', new_item_path, method: :get, class:"btn btn-primary btn-lg order_button" %>
		</div>
		<% else %>

		

		<div class="row" style="margin-top: 20px">
			<%= render partial:'items', locals:{cart: @cart } %>
			<%= render partial:'summary', locals:{cart: @cart } %>
		</div>
		<% end %>

	
</div>

<%= render "layouts/footer" %>

<%= render 'cart_js' %>

<%= render 'notes' %>