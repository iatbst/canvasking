<%= render "layouts/navbar" %>

<div class="container">
	<div class="row" style="margin-top: 100px">
		<div class="col-md-8">
			<table class="table">
				<tbody>
					<% @items.each do |item| %>
					<tr>
						<td align="center"> <%= image_tag item.image.overview.url %>
						<br />
						<ul class="fa-ul">
							<li>
								<b>product:</b> <%= item.product.name %>
							</li>
							<li>
								<b>size:</b> <%= item.width %>"x<%= item.height %>"
							</li>
							<li>
								<b>depth:</b> <%= item.depth %>"
							</li>
							<li>
								<b>border:</b> <%= item.border %>
							</li>
							<li>
								<b>price:</b> <%= item.price %>
							</li>
						</ul>
						<div class="row">
							<div class="col-sm-6">
								
							</div>
							<div class="col-sm-2">
								<b>quantity:</b><%= item.quantity %>
							</div>
							<!-- TODO Need to implement JS to update quantity -->
							<div class="col-sm-1">
								<button type="button" class="btn btn-default" aria-label="Left Align">
									<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
								</button>
							</div>
							<div class="col-sm-1">
								<button type="button" class="btn btn-default" aria-label="Left Align">
									<span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
								</button>
							</div>
							
							<div class="col-sm-1">
								<%= button_to 'Modify', edit_item_path(item), method: :get, class: "btn btn-sm"%>
							</div>
							<div class="col-sm-1">
								<%= button_to 'Remove', item_path(item), method: :delete, class: "btn btn-sm"%>
							</div>
						</div></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-md-2">
			<div class="row" style="height:500px; width:350px;border-style: solid; border-width: 3px;border-color:#EDEDED; margin-left:10px; position:fixed">
				<div class="row" style="height:100px; margin-top: 40px; margin-left:100px" >
					<h2>Your Cart</h2>
				</div>

				<h4 style="margin-left: 30%">3 items: $342</h3>
				<div class="row" style="height:200px; margin-left: 50px" >

					
					<%= button_to 'Checkout', new_order_path, method: :get, class:"btn btn-primary btn-lg", style:"width: 80%" %>
					<br />
					<br />
					<%= button_to 'Continue Shopping', new_item_path, method: :get, class:"btn btn-secondary btn-lg", style:"width: 80%" %>

				</div>
				<div class="row" style="height:50px; margin-left: 50px " >
					<p>
						<em> Does not include tax or shipping. Chat with us or email support@canvasking.com with any questions about your order. </em>
					</p>

				</div>
			</div>
		</div>
	</div>
</div>
