<style>
	.complete {
		width: 160px;
		height: 3px;
		position: relative;
		background: #EF9223;
		margin-left: 20px;
		margin-top: 0px;
	}
	.complete:after {
		content: '';
		width: 20px;
		height: 20px;
		border-radius: 50%;
		position: absolute;
		background: #EF9223;
		bottom: -7.5px;
		left: -8px;
		z-index: 100;
		margin-left: -10px;
	}
	.not_complete {
		width: 160px;
		height: 3px;
		position: relative;
		background: #EF9223;
		margin-left: 19px;
		margin-top: 0px;
	}
	.not_complete:after {
		content: '';
		width: 20px;
		height: 20px;
		border-radius: 50%;
		position: absolute;
		border-width: 2px;
		border-style: solid;
		border-color: #EF9223;
		background: transparent;
		bottom: -7.5px;
		left: -8px;
		z-index: 100;
		margin-left: -10px;
	}

	.last_dot {
		width: 160px;
		height: 3px;
		position: relative;
		background: white;
		margin-left: 19px;
	}

	.progress_text {
		margin-top: 50px;
	}
</style>

<%= render "layouts/navbar" %>

<div class="container" style="margin-top:50px; margin-bottom: 100px" >

	

		<% if @cart.items.count == 0 %>
		<div align="center" style="margin-top: 20px">
			<%= image_tag '/cart/empty_cart.png' %>
			<h3>Oops...Your Cart is still empty. Let's fill it ^_^</h3>
			<br />
			<%= button_to 'Get Started', new_item_path, method: :get, class:"btn btn-primary btn-lg blue_button" %>
		</div>
		<% else %>

		<!-- Progress Bar -->
		<div class="row" style="margin-left: 100px;">
			<div class="col-md-10 col-md-offset-2" style="">
				<div class="col-md-10 complete"></div>
				<div class="col-md-10 complete"></div>
				<div class="col-md-10 not_complete"></div>
				<div class="col-md-10 not_complete last_dot"></div>
			</div>
		</div>
		<div class="row" style="margin-left: 100px; margin-top: 20px">
			<div class="col-md-10 col-md-offset-2">
				<div class="row">
					<div class="col-md-3" style="margin-left: -30px; color: lightgrey">
						CUSTOMIZE
					</div>
					<div class="col-md-3" style="margin-left: -15px; font-weight: 900;">
						CART
					</div>
					<div class="col-md-3" style="margin-left: -60px; color: lightgrey">
						CHECKOUT
					</div>
					<div class="col-md-3" style="margin-left: -25px; color: lightgrey">
						DONE
					</div>
				</div>
			</div>
		</div>

		<div class="row" style="margin-top: 20px">
			<%= render partial:'items', locals:{cart: @cart } %>
			<%= render partial:'summary', locals:{cart: @cart } %>
		</div>
		<% end %>

	
</div>

<%= render 'cart_js' %>
