<!-- navigation section -->
<section class="navbar navbar-default navbar-fixed-top" role="navigation">
	<div class="container">
		<div class="navbar-header">
			<button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				<span class="icon icon-bar"></span>
				<span class="icon icon-bar"></span>
				<span class="icon icon-bar"></span>
			</button>
			<%= link_to "CanvasKing", root_path, class: "navbar-brand" %>
		</div>
		<div class="collapse navbar-collapse">
			<ul class="nav navbar-nav navbar-right">
				<li>
					<%= link_to 'START', new_item_path, method:"get", class:"smoothScroll" %>
				</li>
				<li><a href="#gallery" class="smoothScroll">DISCOVERY</a></li>
				<li>
					<% cart = get_current_cart %>
					<% if cart.quantity != 0 %>
						<%= link_to "CART(#{cart.quantity})", cart_path, class:"smoothScroll", id:"nav_bar_cart"%>
					<% else  %>
						<%= link_to 'CART', cart_path, class:"smoothScroll", id:"nav_bar_cart"%>
					<% end %>
				</li>
				<% unless user_signed_in? %>
					<li><a href="/users/sign_up" class="smoothScroll">SIGN UP</a></li>
					<li><a href="/users/sign_in" class="smoothScroll">LOGIN</a></li>
				<% end %>
				<% if user_signed_in? %>
					<li>
						<a class="smoothScroll">
							<%= current_user.email %>
						</a>
					</li>
					<li>
						<%= link_to "MY ORDERS", orders_path %>
					</li>
					<li>
						<%= link_to "SIGN OUT", destroy_user_session_path, :method => :delete %>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
</section>