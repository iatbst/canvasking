<div class="row box" id="select_image_box" style="<% if hide_image_upload_section?(@new, @show, @save_fail, @item) %>display:none<% end %>">
	<div class="row">
		<h4 class="no_bold" style="margin-left: 40px; margin-top: 20px">
			<% if @show_image_wizard_arrow %>
				<span class="glyphicon glyphicon-arrow-right blink" id="select_image_arrow">&nbsp;</span>
			<% end %>
			Upload Your Image 
		</h4>
	</div>

	<% if @item.errors[:image] %>
	<h6 id="image_error" style="color: red; margin-left: 20px"><%= @item.errors[:image][0] %></h6>
	<% end %>
	
	<div  class="row " style="margin: auto; margin-left: 50px; margin-bottom: 20px">
		<div class="col-md-4" align="">

		<!--  Upload Photo From Computer -->
		<%= form_for @item do |f| %>

			<div class="field" style="margin-top: 10px">
				<%= f.file_field :image, id:"item_image", type:"file", class:"file-loading"%>
			</div>
			<div class="actions" style="margin-top: 10px">
				<%= hidden_field_tag :image_upload, true %>

			</div>
		<% end %>
		</div>
		
		<div class="col-md-4" align="left" style="margin-top: 0px">
			<h4 class="no_bold" style="margin-top: 20px">or import from</h4>
		</div>
		
		<!--  Upload Photo From Facebook/Instagram -->
		<div class="col-md-2" align="center" style="margin-top: 10px; cursor: pointer">
			<%= image_tag '/items/facebook_icon.png', class: "facebook_icon", id: "facebook_upload_button", onclick: "load_images_from_facebook()" %>
			
		</div>
		<div class="col-md-1" align="center" style="margin-top: 10px; cursor: pointer">
			
			<%= image_tag '/items/instagram_icon.png', class: "facebook_icon", id: "instagram_upload_button" %>
		</div>
		
		
		
	</div>

</div>

<script>
	$(document).on('ready', function() {
		$("#item_image").fileinput({
			showCaption : false
		});
	}); 
	
	$('body').on('click', 'button.fileinput-upload', function () {
    		$("div#divLoading").addClass('show');
	});
	
</script>