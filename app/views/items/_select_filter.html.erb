<div class="row box" style="margin-top: 50px;<% if hide_filter_section?(params) %>display:none<% end %>" id="select_filter_box">
	<div class="row">
		<h4 class="no_bold" style="margin-left: 40px; margin-top: 20px">
			<% if @show_filter_wizard_arrow %>
				<span class="glyphicon glyphicon-arrow-right blink" id="select_filter_arrow">&nbsp;</span>
			<% end %>
			Art Effects
		</h4>	
	</div>
	
	<div class="row" style="margin-bottom: 20px">
		<div class="col-md-5">
			
				<p class="no_bold" style="margin-left: 25px; margin-bottom: 50px; margin-top: 30px">
					We provide 10+ art filters to make your photos look like Van Gogh's or Picasso's paintings. Give it a try, You will be supprised !
				</p>
			
			<div class="row">
				
				<%= button_tag "APPLY", :type => 'button', id: 'art_filter_apply_button', style: 'margin-left: 40px; width: 250px;', :class => "btn btn-primary", :onclick => "location.href = '#{art_filter_item_path(@item)}'" %>
				
					<br /><br />
				<%= button_tag "SKIP", :type => 'button', style: 'margin-left: 40px; width: 250px; ', :class => "btn btn-primary", :onclick => "not_interested_for_art_filter();" , id: "not_interested_button"%>
				
				
	
			
			</div>
		</div>
		
		<div class="col-md-7">
			
			<div class="twentytwenty-container" style="margin-left: 100px; margin-top: 30px">
				<%= image_tag '/welcome/sunflower_after.jpg', id:"image_1", class:"thumb_image " %>
				<%= image_tag '/welcome/sunflower_before.jpg', class:"thumb_image"%>
			</div>
		</div>
	
	</div>
	

</div>

<script>
	
$(window).load(function() {
	$(".twentytwenty-container").twentytwenty();
	$('.twentytwenty-overlay').hide();
});
</script>
