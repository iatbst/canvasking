<div class="row box" id="canvas_options" style="<% if @item.depth && @item.border %>border-color:black;<% end %>margin-top: 30px; <% if hide_canvas_options_section?(@item, @update_image_cropped) %>display: none<% end %>">


		<div class="row">
			<h4 class="no_bold" style="margin-left: 60px; margin-top: 20px; margin-bottom: 0px; font-weight: 300"> 		
		
			<span class="glyphicon glyphicon-play blink" id="select_canvas_options_depth_arrow" style="display: none"></span>
			<span style="<% if @item.depth.nil? %>display: none<% end %>" class="glyphicon glyphicon-ok ok_color" id="select_depth_done"></span>
			&nbsp;&nbsp;Select Depth
			
			</h4>
		</div>
		
		<% if @item.errors[:depth] %>
		<h6 id="depth_error" style="color: red" ><%= @item.errors[:depth][0] %></h6>
		<% end %>
		
		<div class="row" style="margin-left: 10px">

			<div class="col-md-2" align="center">

				<label class="depth_options" > 
					
					<%= f.radio_button :depth, "0.0",  style:"visibility: hidden;", id: "depth_0" %>
					<%= image_tag '/canvas_depth_0.jpeg', class: "depth_options_image"%> 
					<h5 style="margin-left: 30px"> Rolled</h5> 
				</label>
			</div>
			
			<div class="col-md-2 col-md-offset-1" align="center">
				<label class="depth_options" > 
					 
					<%= f.radio_button :depth, "0.75", style:"visibility: hidden;", id: "depth_0_75" %>
					<%= image_tag '/canvas_depth_0.75.jpeg', class: "depth_options_image"%>
					<h5 style="margin-left: 30px"> 0.75" </h5> 
				</label>

			</div>
			
			<div class="col-md-2 col-md-offset-1" align="center">
				<label class="depth_options" > 
			
					<%= f.radio_button :depth, "1.5",  style:"visibility: hidden;", id: "depth_1_5"%>
					<%= image_tag '/canvas_depth_1.5.jpeg', class: "depth_options_image"%>
					<h5 style="margin-left: 30px"> 1.5" </h5>	
				</label>
			</div>
			
			<div class="col-md-2 col-md-offset-1" align="center">
				<label class="depth_options"> 
			
					<%= f.radio_button :depth, "2.5",  style:"visibility: hidden;", id: "depth_2_5"%> 
					<%= image_tag '/canvas_depth_2.5.jpeg', class: "depth_options_image"%> 
					<h5 style="margin-left: 30px"> 2.5" </h5>
				</label>
			</div>

		</div>

		<hr style="width: 550px; margin-left: 10px"/>

		<div class="row">
			<h4 class="no_bold" style="margin-left: 60px; margin-top: 0px; font-weight: 300"> 		
		
			<span class="glyphicon glyphicon-play blink" id="select_canvas_options_border_arrow" style="display: none"></span>
			<span style="<% if @item.border.nil? %>display: none<% end %>" class="glyphicon glyphicon-ok ok_color" id="select_border_done"></span>
			&nbsp;&nbsp;Select Border
	
			</h4>
		</div>
		
		<% if @item.errors[:border] %>
		<h6 id="border_error" style="color: red" ><%= @item.errors[:border][0] %></h6>
		<% end %>
		
		<div class="row" style="margin-left: 10px">
			<div class="col-md-2">

				<label class="border_options" > 
					
					<%= f.radio_button :border, "photo",  style:"visibility: hidden;", id: "border_photo"%>
					<%= image_tag '/canvas_border_photo.jpeg', class: "depth_options_image"%>
					<h5 style="margin-left: 30px"> Photo</h5>
				</label>
			</div>
			<div class="col-md-2 col-md-offset-1">

				<label class="border_options" > 
					<%= f.radio_button :border, "black",  style:"visibility: hidden;", id: "border_black"%>
					<%= image_tag '/canvas_border_black.jpeg', class: "depth_options_image"%>
					<h5 style="margin-left: 30px"> Black </h5> 
				</label>
			</div>
			<div class="col-md-2 col-md-offset-1">

				<label class="border_options" > 
					<%= f.radio_button :border, "white", style:"visibility: hidden;", id: "border_white"%>
					<%= image_tag '/canvas_border_white.jpeg', class: "depth_options_image"%>
					<h5 style="margin-left: 30px"> White </h5> 
				</label>
			</div>
		</div>
	
</div>

<script>

$( ".depth_options" ).click(function() {
  if ( $('#depth_error').length ){
  	$('#depth_error').remove();
  	var error_num = parseInt($('#error_number').text());
  	error_num--;
  	if (error_num == 0){
  		$('#error_explanation').remove();
  	} else {
  		var issue = 'issue';
  		if (error_num > 1){issue = 'issues'}
  		$('#error_number').text(error_num + ' ' + issue );
  	}
  }
});

$( ".border_options" ).click(function() {
  if ( $('#border_error').length ){
  	$('#border_error').remove();
  	var error_num = parseInt($('#error_number').text());
  	error_num--;
  	if (error_num == 0){
  		$('#error_explanation').remove();
  	} else {
  		var issue = 'issue';
  		if (error_num > 1){issue = 'issues'}
  		$('#error_number').text(error_num + ' ' + issue );
  	}
  }
});

</script>
