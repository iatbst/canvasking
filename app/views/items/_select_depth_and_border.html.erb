
<div class="row" style="height:500px; background-color:#EDEDED; margin-top:50px">
				
				<div class="container">
					<h4>Select depth</h4>
					<div class="row">

						<div class="col-sm-2">

							<label>
								<h6>
									Rolled, No Frame
								</h6>
								<%= f.radio_button :depth, "0",  style:"visibility: hidden;", id: "depth_0" %>

								<%= image_tag '/canvas_depth_0.jpeg' %> </label>
						</div>
						<div class="col-sm-2">
							<label>
								<h6>
									0.75" Deep
								</h6>
								<%= f.radio_button :depth, "0.75", style:"visibility: hidden;", id: "depth_0_75" %>
								
								<%= image_tag '/canvas_depth_0.75.jpeg' %> </label>

						</div>
						<div class="col-sm-2">
							<label>
								<h6>
									1.5" Deep
								</h6>
								<%= f.radio_button :depth, "1.5",  style:"visibility: hidden;", id: "depth_1_5"%>
								
								<%= image_tag '/canvas_depth_1.5.jpeg' %> </label>

						</div>
						<div class="col-sm-2">
							<label>
								<h6>
									2.5" Deep
								</h6>
								<%= f.radio_button :depth, "2.5",  style:"visibility: hidden;", id: "depth_2_5"%>
								
								<%= image_tag '/canvas_depth_2.5.jpeg' %> </label>

						</div>

					</div>
					
					<h4>Select border</h4>
					<div class="row">
						<div class="col-sm-2">

							<label>
								<h6>
									Photo Wrap
								</h6>
								<%= f.radio_button :border, "photo",  style:"visibility: hidden;", id: "border_photo"%>
								
								<%= image_tag '/canvas_border_photo.jpeg' %> </label>
						</div>
						<div class="col-sm-2">

							<label>
								<h6>
									Black Border
								</h6>
								<%= f.radio_button :border, "black",  style:"visibility: hidden;", id: "border_black"%>
								
								<%= image_tag '/canvas_border_black.jpeg' %> </label>
						</div>
						<div class="col-sm-2">

							<label>
								<h6>
									White Border
								</h6>
								<%= f.radio_button :border, "white", style:"visibility: hidden;", id: "border_white"%>
								
								<%= image_tag '/canvas_border_white.jpeg' %> </label>
						</div>						
					</div>
				</div>
			</div>