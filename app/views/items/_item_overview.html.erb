<div class="row box" align="center" style="height:550px; width:350px; margin-left:10px; position:fixed">
	<div class="row" style="height:300px; margin-top: 30px;">
		<% unless @item.image.file.nil? %>
			<%= image_tag get_image_url(@item, "overview"), class: "overview_image", id: "the_image"%>
		<% else %>
			<%= image_tag '/canvas_placeholder.png', class: "overview_image" %>
		<% end %>
	</div>
	
	<div class="row" style="height:120px" >
		<div class="col-md-1"></div>
		<div class="col-md-10" style= "margin-left: 0px" align="left">
			<br />
			<b class="no_bold" id="product_choice"> 
				<% if !@item.product.nil? %>
					<%= "Type: #{@item.product.name}" %>
				<% end %> 
			</b>
			<br />
			
			<b class="no_bold" id="attr1_choice"> 
				<% if !@item.product.nil? && @item.product.name.include?("canvas") && !@item.depth.nil? %>
					<%= "Depth: #{@item.depth}\"" %>
				<% elsif !@item.product.nil? && @item.product.name.include?("frame") && !@item.frame_id.nil? %>
					<%= "Frame: #{Frame.find(@item.frame_id).name}" %>
				<% end %> 
			</b>
			<br />
			<b class="no_bold" id="attr2_choice"> 
				<% if !@item.product.nil? && @item.product.name.include?("canvas") && !@item.border.nil? %>
					<%= "Border: #{@item.border}" %>
				<% elsif !@item.product.nil? && @item.product.name.include?("frame") && !@item.mat.nil? %>
					<%= "Mat: #{@item.mat}\"".gsub("0.0\"", "No") %>
				<% end %>  
			</b>
			
			<br />
			<b class="no_bold" id="size_choice"> 
				<% if !@item.size.nil? && !@item.size.empty? %>
					<%= "Size: #{@item.size}" %>
				<% end %> 
			</b>

		</div>
	</div>

	<div class="row" style="height:30px" >
		<div class="col-md-1"></div>
		<div class="col-md-5" style= "margin-left: 0px" align="left">
			<b class="no_bold" id="price_choice"> 
				<% if !@item.price.nil? && !@item.size.nil? && !@item.size.empty? %>
					<%= "Price: $#{@item.price}" %>
				<% end %> 
			</b>
		</div>
	</div>

	<div class="row" style="height:30px;" >
		<%= hidden_field_tag :go_to_cart, true %>
		<% if item_in_cart?(@item) %>
			<%= f.submit 'Save Changes', class: "btn btn-primary btn-lg", style:"width: 80%"%>
		<% else %>
			<%= f.submit 'Add To Cart', class: "btn btn-primary btn-lg", style:"width: 80%"%>
		<% end %>
	</div>

</div>