<div class="row box" style="margin-top: 50px">
	<div class="row">
		<h4 class="no_bold" style="margin-left: 40px; margin-top: 20px; margin-bottom: 20px"> 
			
			Available Products
			</h4>
		
	</div>
	
	<% if @item.errors[:product_id] %>
	<h6 id="product_error" style="color: red; margin-left: 20px"><%= @item.errors[:product_id][0] %></h6>
	<% end %>
	
	
		<div class="row">

			<div class="col-md-3" align="center">

				<label id="product_canvas"> 
					<%= f.radio_button :product_id, Product.find_by_name('canvas').id, style: "visibility: hidden;", id:"product_canvas"%>
					<%= image_tag '/items/product_canvas.jpg', class: "product_image"%> 
					<h6 class="no_bold" style="margin-left: 15px"> Canvas Art</h5>
				</label>
			</div>
			
			<div class="col-md-3" align="center">
				<label id="product_frame"> 
					<%= f.radio_button :product_id, Product.find_by_name('frame').id, style: "visibility: hidden;", id:"product_frame"%>
					<%= image_tag '/items/product_frame.jpg', class: "product_image"%> 
					<h6 class="no_bold" style="margin-left: 15px"> Framed Art</h6>	
				</label>

			</div>

			<div class="col-md-3" align="center">
				<label id="product_frame">
					<%= f.radio_button :product_id, Product.find_by_name('frame').id, style: "visibility: hidden;", id:"product_frame"%>
					<%= image_tag '/items/product_iphone_case.jpg',class: "product_image"%> 
					<h6 class="no_bold" style="margin-left: 15px">Iphone case</h6>
				</label>

			</div>
			
			<div class="col-md-3" align="center">
				<label id="product_frame">
					<%= f.radio_button :product_id, Product.find_by_name('frame').id, style: "visibility: hidden;", id:"product_frame"%>
					<%= image_tag '/items/product_mug.jpg', class: "product_image"%> 
					<h6 class="no_bold" style="margin-left: 15px">Mug</h6>
				</label>

			</div>

	</div>
</div>

<script>

$( "#product_canvas, #product_frame" ).click(function() {
  if ( $('#product_error').length ){
  	$('#product_error').remove();
  	var error_num = parseInt($('#error_number').text());
  	error_num--;
  	if (error_num == 0){
  		$('#error_explanation').remove();
  	} else {
  		var issue = 'issue';
  		if (error_num > 1){issue = 'issues'}
  		$('#error_number').text(error_num + ' ' + issue );
  	}
  }
});
</script>
