


<% orders.each do |order| %>
	<div class="row" style="margin-top: 20px">
		<div class="panel panel-default">
			<!-- Default panel contents -->
			<div class="panel-heading">
				<div class="container" >
					<div class="row">
						<div class="col-md-2">
							<h5 style="font-weight: 900"> 下单日期 </h5> <%= order.created_at.strftime("%b.%d %Y") %>
						</div>
						
						<div class="col-md-2">
							<h5 style="font-weight: 900">金额</h5>$<%= order.total_price %>
						</div>
						
						<div class="col-md-5" align="right">
							<h5 style="font-weight: 900">订单号 <%= order.number %></h5>
							<%= link_to 'Order Detail', order_path(order) %>
						</div>
					</div>
				</div>
			</div>

			<!-- Table -->
			<table class="table">
				<tbody>
					<% order.items.each do |item| %>
					<tr>
						<td>
						<div class="row">
							<div class="col-md-3 col-md-offset-1">
								<br />
								
							</div>

							<div class="col-md-6" style="font-weight: 300">
								<br />
								

							</div>

							<div class="col-md-2">
								<br />
								
								<br />
								
								<button type="button" class="btn btn-default btn-sm orange_style" data-toggle="modal" data-target="#leave_us_messages_<%= item.id %>" style="width: 90%">
									Leave Us Messages
								</button>
								<%= render partial: 'leave_us_message', locals: {item: item}%>
								<br />
								
							</div>

						</div></td>
					</tr>
					<% end %>
				</tbody>
			</table>

		</div>

	</div>

	<% end %>