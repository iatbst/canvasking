<%= render "layouts/navbar" %>


<div class="container">
	<div class="row" style="margin-top: 100px">

		<div class="col-md-8" style="margin-bottom: 20px" align="left">
			<%= form_for :order, url: orders_path, :html=> {:id=> "payment-form"} do |f| %>

			

			<%= render partial:'shipping', locals:{f: f} %>
			<%= render partial:'payment', locals:{f: f} %>
			<br />
			<%= f.submit 'Place Order', class: "btn btn-primary btn-lg", id:"place_order"%>
			<% end %>
		</div>

		<div class="col-md-2">
			<%= render 'order_summary' %>
		</div>
	</div>
</div>

<div id="divLoading"> 
</div>

<!-- Select states by country: trick functions, need to refactor !! -->
<script>
	$('#select_country').change(function(){
		var new_country = $( "#select_country option:selected" ).text();
		var countries = {};
		<% @countries.each do |country, states| %>
			countries['<%= country %>'] = [];
			<% states.each do |state| %>
				var state = [];
				state.push('<%= state[0] %>');
				state.push('<%= state[1] %>');
				countries['<%= country %>'].push(state);
			<% end %>
		<% end %>
		$('#select_state').empty();
		$('#select_state').append($('<option></option>').text('--select state--'));
		for(i = 0; i < countries[new_country].length; i++){
			var option = $('<option></option>').attr("value", countries[new_country][i][1]).text(countries[new_country][i][0]);
			$('#select_state').append(option);
		}
	
	});
	
	$('#place_order').click(function () {
    		$("div#divLoading").addClass('show');
	});
</script>

