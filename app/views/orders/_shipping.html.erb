<h3>Shipping Address</h3>
<hr style="width: 550px; margin-left: 1px; border-width: 1px; border-color:#E2E2E2;"/>

<div class="row">
	<div class="col-md-1">
		<%= image_tag '/dhl_logo_sm.png' %>
	</div>
	<div class="col-md-8" style="margin-left: 10px">
		<em style="color: grey"> Most shipments will be sent out via DHL. If you are outside the U.S. or Canada, please contact us for a shipping quote. </em>
	</div>
</div>

<!-- Shipping Validations -->
<% if @order.errors.any? %>
<div id="error_explanation">
	<h4 class="no_bold" style="color: red"> Please fix following <%= pluralize(@order.errors.count, "issue") %> before continue.</h2>
</div>
<% end %>

<div class="row" style="margin-left: 3px; margin-bottom: 40px">

	<div class="form-group" style="margin-top: 10px">
		<% if @order.errors[:shipping_full_name].any? %>
		<span class="form_error"><%= @order.errors[:shipping_full_name][0] %></span>
		<%= f.text_field :shipping_full_name, class:"form-control input-lg", placeholder:"Full Name", style:"width:71%; border-color: red;" %>
		<% else %>
		<%= f.text_field :shipping_full_name, class:"form-control input-lg", placeholder:"Full Name", style:"width:71%;" %>
		<% end %>
	</div>

	<div class="form-group">
		<% if @order.errors[:shipping_address_1].any? %>
		<span class="form_error"><%= @order.errors[:shipping_address_1][0] %></span>
		<%= f.text_field :shipping_address_1, class:"form-control input-lg", placeholder:"Address 1", style:"width:71%; border-color: red"%>
		<% else %>
		<%= f.text_field :shipping_address_1, class:"form-control input-lg", placeholder:"Address 1", style:"width:71%"%>
		<% end %>
	</div>

	<div class="form-group">
		<%= f.text_field :shipping_address_2, class:"form-control input-lg", placeholder:"Address 2 (Optinal)", style:"width:71%"%>
	</div>

	<div class="form-group">
		<% if @order.errors[:shipping_city].any? %>
		<span class="form_error"><%= @order.errors[:shipping_city][0] %></span>
		<%= f.text_field :shipping_city, class:"form-control input-lg", placeholder:"City", style:"width:71%; border-color: red" %>
		<% else %>
		<%= f.text_field :shipping_city, class:"form-control input-lg", placeholder:"City", style:"width:71%" %>
		<% end %>

	</div>

	<div class="row">
		<div class="form-group col-sm-5">
			<label>Country</label>
			<%= f.select :shipping_country, ['United States', 'Canada'],{} ,{ class:"form-control input-lg", style:"width: 71%"} %>
		</div>

		<div class="form-group col-sm-5">
			<label>State</label>
			<% if @order.errors[:shipping_state].any? %>
				<span class="form_error"><%= @order.errors[:shipping_state][0] %></span>
				<%= f.select :shipping_state, ['California', 'Washington', 'New York', 'Texas', 'Nevada', 'Utah'],{:prompt => "--select state--"} ,{ class:"form-control input-lg", style:"width: 71%;border-color: red"} %>
			<% else %>
				<%= f.select :shipping_state, ['California', 'Washington', 'New York', 'Texas', 'Nevada', 'Utah'],{:prompt => "--select state--"} ,{ class:"form-control input-lg", style:"width: 71%"} %>
			<% end %>
		</div>
	</div>

	<div class="form-group">
		<% if @order.errors[:shipping_zip].any? %>
		<span class="form_error"><%= @order.errors[:shipping_zip][0] %></span>
		<%= f.text_field :shipping_zip, class:"form-control input-lg", placeholder:"Zip or Post Code", style:"width:71%; border-color: red" %>
		<% else %>
		<%= f.text_field :shipping_zip, class:"form-control input-lg", placeholder:"Zip or Post Code", style:"width:71%" %>
		<% end %>
	</div>

	<div class="form-group">
		<em>(Optional. In case we need to contact you about the order)</em>
		<%= f.text_field :shipping_phone, class:"form-control input-lg", placeholder:"Phone", style:"width:71%" %>
	</div>

</div>