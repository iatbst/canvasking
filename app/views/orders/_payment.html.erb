<h3>Payment Info</h3>
<hr style="width: 550px; margin-left: 1px; border-width: 1px; border-color:#E2E2E2;"/>

<div class="row" style="height:400px; margin-top:20px ">

	<!-- Stripe for Payment -->
	<span class="payment-errors"></span>

	<div class="row">
		<div class="form-group col-lg-6">
			<label> <span>Card Number</span></label>
			<input type="text" size="20" data-stripe="number" class="form-control input-lg">
		</div>
	</div>

	<label><span>Expiration 	(MM/YY)</span></label>
	<label style="margin-left: 150px"> <span>CVC</span> </label>
	<div class="row">
		<div class="form-group col-xs-2">
			<input type="text" data-stripe="exp_month" class="form-control input-lg">
		</div>
		<div class="form-group col-xs-2">
			<input type="text" size="2" data-stripe="exp_year" class="form-control input-lg">
		</div>
		<div class="form-group col-xs-2">
			<input type="text" size="4" data-stripe="cvc" class="form-control input-lg">
		</div>
	</div>

</div>

<!-- Stripe -->
<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript">
	Stripe.setPublishableKey('pk_test_86PXfTHcS3DHW58QnF6kGP5Q');

	$(function() {
		var $form = $('#payment-form');
		$form.submit(function(event) {
			// Disable the submit button to prevent repeated clicks:
			$form.find('.submit').prop('disabled', true);

			// Request a token from Stripe:
			Stripe.card.createToken($form, stripeResponseHandler);

			// Prevent the form from being submitted:
			return false;
		});
	});

	function stripeResponseHandler(status, response) {
		// Grab the form:
		var $form = $('#payment-form');

		if (response.error) {// Problem!

			// Show the errors on the form:
			$form.find('.payment-errors').text(response.error.message);
			$form.find('.submit').prop('disabled', false);
			// Re-enable submission

		} else {// Token was created!

			// Get the token ID:
			var token = response.id;

			// Insert the token ID into the form so it gets submitted to the server:
			$form.append($('<input type="hidden" name="stripeToken">').val(token));

			// Submit the form:
			$form.get(0).submit();
		}
	};
</script>