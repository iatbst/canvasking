<style>

.complete {
  width: 160px;
  height: 3px;
  position: relative;
  background: #EF9223;
  margin-left: 20px;
  margin-top: 0px;
}
.complete:after {
  content: '';
  width: 20px;
  height: 20px;
  border-radius: 50%;
  position: absolute;
  background: #EF9223;
  bottom: -7.5px;
  left: -8px;
  z-index: 100;
  margin-left: -10px;
  
}
.not_complete {
  width: 160px;
  height: 3px;
  position: relative;
  background: #EF9223;
  margin-left: 19px;
  margin-top: 0px;
}
.not_complete:after {
  content: '';
  width: 20px;
  height: 20px;
  border-radius: 50%;
  position: absolute;
  border-width: 2px;
  border-style: solid;
  border-color: #EF9223;
  background: transparent;
  bottom: -7.5px;
  left: -8px;
  z-index: 100;
  margin-left: -10px;
}	

.last_dot {
  width: 160px;
  height: 3px;
  position: relative;
  background: white;
  margin-left: 19px;
}	

.progress_text {
	margin-top: 50px;
}
</style>

<%= render "layouts/navbar" %>

<div class="container" style="margin-top: 50px; margin-bottom: 20px" >
	<div class="" style="margin-bottom: 50px; <% if @new_order_complete.nil? %><%= "display: none" %><% end %>">
	
	
		<div class="col-md-12" align="center" style="margin-top: 20px;margin-bottom: 20px">
			
			<h3 style="font-weight: bolder"><img src="/order/order_complete.png" id="order_complete_icon" style="margin-top: -5px;margin-right: 10px"/>
				Congratulations ! Your order is confirmed.</h3>
			<h4 class="no_bold">We are sending you a confirmation email.
				Thank you for shopping with us.</h4>
		</div>
	</div>
	<h3 class="no_bold">Order # <%= @order.number %></h3>
	<div class="row box">
		<div class="col-md-3">
			<br />
			<h5><b>Shipping Address</b></h5>
			<%= @order.shipping_full_name %>
			<br />
			<%= @order.shipping_address_1 %>
			<br />
			<% if !@order.shipping_address_2.empty? %>
			<%= @order.shipping_address_2 %>
			<br />
			<% end %>
			<%= @order.shipping_city %>,&nbsp;<%= @order.state.name %>&nbsp;<%= @order.shipping_zip %>
			<br />
			<%= @order.country.name %>
			<br />
		</div>
		<div class="col-md-6">
			<br />
			<h5>Payment Method</h5>
			VISA &nbsp;**** &nbsp;4369
		</div>
		<div class="col-md-3">
			<br />
			<h5>Order Summary</h5>
			Item(s) Subtotal: $<%= @order.before_price %>
			<br />
			Shipping & Handling: $<%= @order.shipping_price %>
			<br />
			Total before tax: $<%= @order.before_price + @order.shipping_price %>
			<br />
			Tax collected: $<%= @order.tax_price %>
			<br />
			<% if @order.coupon %>		
					Coupon saved: -$<%= @order.before_price - @order.discount_price%>
					<br />
			<% end %>
			<br />
			<b>Grand Total: $<%= @order.total_price %></b>
			<br />
		</div>
	</div>
	<div class="row box" style="margin-top: 20px;">

		<% @order.items.each_with_index do |item, ix| %>
		<div class="row">

			<div class="container">
				<div class="row">
					<div class="col-md-9">
						<br />
					
						<%= image_tag get_image_url(item, "overview"), class: "overview_image image_shadow_in_order_show #{add_frame_class(item, 'order_show')}", id: "item_#{item.id}" %>
								<div>
									<div class="triptych_1_in_order_show image_shadow_in_order_show" id="item_<%= item.id%>_triple_1"></div>
									<div class="triptych_2_in_order_show image_shadow_in_order_show"  id="item_<%= item.id%>_triple_2" style="margin-left: 8px; margin-right: 8px"></div>
									<div class="triptych_3_in_order_show image_shadow_in_order_show" id="item_<%= item.id%>_triple_3"></div>
								</div>
					</div>

					<div class="col-md-3" >
						<br />
						
						
						Type: <%= item.product.name %>
						<br />
						Size: <%= item.size %>
						<br />
						<% if item.product.name.include?('canvas')%>
							Depth: <%= item.canvas_depth %>
							<br />
							Outer Frame: <%= item.canvas_frame %>								
						<% else %>
							Frame: <%= Frame.find(item.frame_id).name %>
							<br />
							Mat: <%= "#{item.mat}\"".gsub("0.0\"", "No") %>								
						<% end %>
						

					</div>

				</div>
				<div class="row">
					<div class="col-md-9"></div>
					<div class="col-md-3">
						Quantity: <b><%= item.quantity %></b><br />
						Subtotal: $<b><%= item.price*item.quantity %></b>					
					</div>
				</div>
				<% if ix != @order.items.count - 1 %>
					<hr style="width: 100%; border-color:#EDEDED;"/>
				<% else %>
					<br />
				<% end %>
			</div>
		</div>
		<% end %>
	</div>
</div>

<%= render "layouts/footer" %>

<%= render 'show_js' %>
