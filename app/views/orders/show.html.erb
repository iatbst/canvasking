<%= render "layouts/navbar" %>


<div class="container" style="margin-top: 50px" >
	<h3>Order Details</h3>
	<div class="row">
		<h4>Shipping Info</h4>
		<ul class="list-group">
			<li class="list-group-item">
				<%= @order.shipping_full_name %>
			</li>
			<li class="list-group-item">
				<%= @order.shipping_address_1 %>
				<%= @order.shipping_address_2 %>
			</li>
			<li class="list-group-item">
				<%= @order.shipping_city %>
			</li>
			<li class="list-group-item">
				<%= @order.shipping_state %>
			</li>
			<li class="list-group-item">
				<%= @order.shipping_country %>
			</li>
			<li class="list-group-item">
				<%= @order.shipping_zip %>
			</li>
			<li class="list-group-item">
				<%= @order.shipping_phone %>
			</li>
		</ul>
	</div>
	<div class="row">
		<h4>What I ordered</h4>
		<table class="table">
			<% @order.items.each do |item| %>
			<tr>
				<td> <%= image_tag item.image.thumb.url %> </td>
				<td>
				<ul class="fa-ul">
					<li>
						<b>product:</b> <%= item.product.name %>
					</li>
					<li>
						<b>size:</b> <%= item.width %>"x<%= item.height %>"
					</li>
					<li>
						<b>depth:</b> <%= item.depth %>"
					</li>
					<li>
						<b>border:</b> <%= item.border %>
					</li>
					<li>
						<b>price:</b> <%= item.price %>
					</li>
				</ul></td>
			</tr>
			<% end %>
		</table>
	</div>
</div>
