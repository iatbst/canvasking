<!-- navigation section -->
<%= render 'layouts/navbar_no_banner' %>

<div class="container" style="margin-top: 50px; margin-bottom: 50px; min-height: 100%">
	<div class="row">
		<div class="col-md-4 col-md-offset-4 box" >

			<div align="center" style="margin-top: 50px; margin-bottom: 0px">
				<h3>Update your password</h3>
			</div>
			
		
		
			
			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
			<!-- Error Messages -->
			<%= devise_error_messages! %>
			<%= f.hidden_field :reset_password_token %>
			
			<div class="form-group" align="center">
				<% if @minimum_password_length %>
      				<em>(<%= @minimum_password_length %> characters minimum)</em><br />
    				<% end %>
				<%= f.email_field :password, autofocus: true, type: "text", placeholder: "New password", class:"form-control input-lg", style:"width: 90%" %>
			</div>

			<div class="form-group" align="center">
				<%= f.email_field :password_confirmation, autocomplete: "off", type: "text", placeholder: "Confirm new password", class:"form-control input-lg", style:"width: 90%" %>
			</div>
			
			<div align="center">
				<%= f.submit "Update Now", type: "submit", class: "btn btn-primary btn-lg", style:"width: 90%"  %>
			</div>
			<% end %>
		
			
			<div class="row" style="margin-top: 20px">
				<div class="col-sm-6" align="center">
					<h4 style="font-weight: lighter"><%= link_to 'Login', new_user_session_path %></h4>
				</div>
				<div class="col-sm-6" align="center">
					<h4 style="font-weight: lighter"><%= link_to 'Sign Up', new_user_registration_path %></h4>
				</div>
			</div>
		</div>
	</div>
</div>

<%= render "layouts/footer" %>