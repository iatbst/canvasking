<!-- navigation section -->
<%= render 'layouts/navbar' %>

<div class="container" style="margin-top: 100px">
	<div class="row">
		<div class="col-md-4 col-md-offset-4 box" >

			<div align="center" style="margin-top: 50px; margin-bottom: 50px">
				<h3>Forgot your password?</h3>
			</div>
			
		
		
			
			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			<!-- Error Messages -->
			<%= devise_error_messages! %>

			<div class="form-group" align="center">
				<%= f.email_field :email, autofocus: true, type: "text", placeholder: "Your Account Email", class:"form-control input-lg", style:"width: 90%" %>
			</div>
			
			<div align="center">
				<%= f.submit "Send Instructions", type: "submit", class: "btn btn-primary btn-lg", style:"width: 90%; background-color: #ef9223; border-color: #ef9223"  %>
			</div>
			<% end %>
			
			<div style="margin-top: 20px">
				<h5 style="font-weight: normal; color: grey">Provide your email and we'll send password instructions.</h5>
			</div>
			
			<div class="row" style="margin-top: 20px">
				<div class="col-sm-6" align="center">
					<h4 class="no_bold"><%= link_to 'Login', new_user_session_path %></h4>
				</div>
				<div class="col-sm-6" align="center">
					<h4 class="no_bold"><%= link_to 'Sign Up', new_user_registration_path %></h4>
				</div>
			</div>
		</div>
	</div>
</div>
